{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "esnext.asynciterable"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@config": ["config"],
      "@databases": ["databases"],
      "@exceptions/*": ["exceptions/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"],
      "@apis/*": ["apis/*"],
      "@helpers/*": ["helpers/*"],
      "@cronjobs/*": ["cronjobs/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    ".env",
    "src/apis/**/*.ts"
  ],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests", "src/utils/logs", "logs", "src/utils/sequelize-cli-connect.js"]
}
